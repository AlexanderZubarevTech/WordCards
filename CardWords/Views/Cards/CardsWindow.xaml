<Window x:Class="CardWords.Views.Cards.CardsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardWords.Views.Cards"
        mc:Ignorable="d"
        Title="Тест" Height="800" Width="1350"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#e9e9e9">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="200"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ProgressBar x:Name="PB_progress" Grid.Row="0" Grid.ColumnSpan="2" 
                     Minimum="0" Maximum="100" Value="70" Height="50" Foreground="#5da7a8"/>

        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Panel.ZIndex="1">
                <TextBlock x:Name="TB_WordName" FontSize="90" FontWeight="Bold" Foreground="#DDD" TextWrapping="Wrap" Text="Word name"></TextBlock>
                <TextBlock x:Name="TB_Transcription" FontSize="40" FontWeight="Bold" Foreground="#DDD" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Transcription"></TextBlock>
            </StackPanel>
            <Grid Width="1200" Height="450" Panel.ZIndex="0">
                <Rectangle Name="R_WordBackbround" Fill="#5da7a8" RadiusX="25" RadiusY="25"/>
                <Polygon Fill="#6cc3c4" Points="0, 264, 330, 0, 530, 0, 0, 424" />
                <Polygon Fill="#6cc3c4" Points="670, 450, 1200, 26, 1200, 186, 870, 450" />
            </Grid>
            
        </Grid>

        <!--#038424 - верный ответ-->
        <!--#6c2421 - неправильный ответ-->

        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="TB_LeftTranslation" Grid.Column="1" FontSize="40" FontWeight="Bold" Foreground="#DDD" VerticalAlignment="Center" HorizontalAlignment="Center" Panel.ZIndex="1" Margin="0 0 50 0" TextWrapping="Wrap" Text="Left word name"></TextBlock>
            <TextBlock Grid.Column="0" FontSize="120" FontWeight="Bold" Foreground="#DDD" VerticalAlignment="Top" HorizontalAlignment="Left" Panel.ZIndex="1" Margin="64,10,0,0" Text="&lt;"></TextBlock>

            <Grid Grid.ColumnSpan="2" Width="600" Height="170" Panel.ZIndex="0">
                <Rectangle Name="R_LeftTranslationBackbround" Fill="#5da7a8" RadiusX="25" RadiusY="25" />
                <Polygon Fill="#6cc3c4" Points="87, 170, 300, 0, 500, 0, 287, 170" />
            </Grid>            
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="150"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="TB_RightTranslation" Grid.Column="0" FontSize="40" FontWeight="Bold" Foreground="#DDD" VerticalAlignment="Center" HorizontalAlignment="Center" Panel.ZIndex="1" Margin="50 0 0 0" TextWrapping="Wrap" Text="Right word name"></TextBlock>
            <TextBlock Grid.Column="1" FontSize="120" FontWeight="Bold" Foreground="#DDD" VerticalAlignment="Top" HorizontalAlignment="Right" Panel.ZIndex="1" Margin="0,10,64,0" Text=">"></TextBlock>
            <Grid Grid.ColumnSpan="2" Width="600" Height="170" Panel.ZIndex="0">
                <Rectangle Name="R_RightTranslationBackbround" Fill="#5da7a8" RadiusX="25" RadiusY="25" />
                <Polygon Fill="#6cc3c4" Points="87, 170, 300, 0, 500, 0, 287, 170" />
            </Grid>
        </Grid>

    </Grid>
</Window>
